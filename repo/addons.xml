<?xml version='1.0' encoding='UTF-8'?>
<addons><addon id="plugin.video.wl" name="MyWatchlist" version="1.0.1" provider-name="OHO">
    <requires>
        <import addon="xbmc.python" version="3.0.1" />
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video executable</provides>
    </extension>
    <extension point="xbmc.python.script" library="lib/script.py" />    
    <extension point="kodi.context.item">
		<menu id="kodi.core.main">
		  <item library="context.py">
			<label>[COLOR goldenrod]Watchlist[/COLOR]</label>
			<visible>True</visible>
		  </item>
		</menu>
	</extension>
    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <summary lang="de_de">MyWatchlist</summary>
        <description>Füge Videos und Verzeichnisse aus beliebigen Addons zur Watchlist hinzu und verwalte sie.</description>
        <disclaimer lang="de_de" />
        <platform>all</platform>
        <assets>
			<icon>resources/images/icon.png</icon>
			<fanart>resources/images/fanart.jpg</fanart>
		</assets>
    </extension>
</addon>
<addon id="plugin.video.mtl" name="MTL" version="1.2.5" provider-name="oho">
    <requires>
        <import addon="xbmc.python" version="3.0.1"/>
        <import addon="script.module.requests" version="2.12.4"/>
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>video</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <summary lang="de_de">MTL</summary>
        <summary lang="eng">MTL</summary>
        <description>
            Erstelle Listen aus Sendungen der ARD und ZDF Mediathek und lasse dir die neusten Sendungen anzeigen. 
             - Inklusive Suchfunktion
             - Resume Points
             ----------------------------------
             - v1.2.0:  add resume points
             - v1.2.1:  Listing content tvshow
             - v1.2.2:  Python 3.0.1
             - v1.2.5:  -Edit verbessert
                        -beim Ändern des Titels korrekte Übernahme des Senders
                        -Wiedergabe von MTL Sucheinträgen aus Favouriten / MyWatchlist, 
                         die nicht in Results vorhanden sind werden in die Suche umgeleitet.
                        -Code Cleanup 
        </description><disclaimer lang="de_de"></disclaimer>
        <platform>all</platform>
        <assets>
			<icon>resources/images/icon.png</icon>
			<fanart>resources/images/fanart.png</fanart>
		</assets>
    </extension>
</addon>
<addon id="plugin.video.cozybinge" name="CozyBinge" version="1.0.5" provider-name="oho">
        <requires>
            <import addon="xbmc.python" version="3.0.1" />
        </requires>
        <extension point="xbmc.python.pluginsource" library="default.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en">Create configurable lists of unseen TV episodes</summary>
            <description lang="en">
                Allows creating multiple user-defined lists of TV shows.
                Each list stores rules like maximum episodes per show and
                consecutive episode grouping. The addon displays unseen
                episodes based on those rules and plays them with full metadata.
            </description>
            <platform>all</platform>
            <license>MIT</license>
            <source></source>
            <assets>
                <icon>resources/icon.png</icon>
                <fanart>resources/fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
</addons>